<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0" metadata-complete="false">

	<!-- Listener for loading spring application context -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:applicationContext-init.xml</param-value>
	</context-param>

	<context-param>
		<param-name>configuration</param-name>
		<param-value>deployment</param-value>
	</context-param>

	<filter>
		<filter-name>HelloWorldApplication</filter-name>
		<filter-class>org.apache.wicket.protocol.http.WicketFilter</filter-class>
		<init-param>
			<param-name>applicationFactoryClassName</param-name>
			<param-value>org.apache.wicket.spring.SpringWebApplicationFactory</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>HelloWorldApplication</filter-name>
		<url-pattern>/ui/*</url-pattern>
	</filter-mapping>

	<listener>
		<description>ApplicationContextLoaderListener</description>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<servlet>
		<servlet-name>health</servlet-name>
		<jsp-file>/health.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>health</servlet-name>
		<url-pattern>/health</url-pattern>
	</servlet-mapping>
	<!-- Servlet for REST web service -->
	<servlet>
		<servlet-name>CommandRestServlet</servlet-name>
		<servlet-class>com.emo.skeleton.web.ProcessCommandRestServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>CommandRestServlet</servlet-name>
		<url-pattern>/commands/rest/*</url-pattern>
	</servlet-mapping>

	<!-- Servlet for REST web service -->
	<servlet>
		<servlet-name>CommandsRestServlet</servlet-name>
		<servlet-class>com.emo.skeleton.web.ProcessCommandsRestServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>CommandsRestServlet</servlet-name>
		<url-pattern>/commands/rest/batch</url-pattern>
	</servlet-mapping>

	<!-- Servlet for Hessian web services -->
	<servlet>
		<servlet-name>CommandHessianServlet</servlet-name>
		<servlet-class>com.emo.skeleton.web.CommandHessianServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CommandHessianServlet</servlet-name>
		<url-pattern>/commands/hessian</url-pattern>
	</servlet-mapping>


</web-app>